<h2>Centro de Mensajes</h2>
<form onsubmit="return addMessage(this)">
	Usuario: <input type="text" id="email" placeholder="Tu email" required><br>
	Mensaje: <input type="text" id="texto" placeholder="Mensaje">
	<input type="submit" value="Enviar">
</form>
<div id="mensajes"></div>
<hr />

<h2>Ingresar Producto</h2>
<form onsubmit="return addProduct(this)">
	Title: <input type="text" id="title" required/>
	Price: <input type="number" id="price" required/>
	Thumbnail: <input type="text" id="thumbnail" required/>
	<input type="submit" value="Agregar">
</form>
<hr>

<h2>Lista de Productos</h2>
<table id="productos"></table>
<hr />